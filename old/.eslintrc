{
  "extends": "standard",
  "plugins": [
    "standard",
    "promise"
  ],
  "env": {
    "browser": true,
    "amd": true,
    "es6": false,
    "node": true,
    "mocha": true
  },
  "rules": {
    "semi": [2, "always"],
    "spaced-comment": 0,
    "comma-dangle": 1,
    "quotes": [
      1,
      "single"
    ],
    "no-undef": 1,
    "global-strict": 0,
    "no-extra-semi": 1,
    "no-underscore-dangle": 0,
    "no-console": 1,
    "one-var": 0,
    "no-unused-vars": 1,
    "no-trailing-spaces": [
      1,
      {
        "skipBlankLines": true
      }
    ],
    "no-unreachable": 1,
    "no-alert": 0
  }
}
